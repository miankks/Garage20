@model IEnumerable<Garage20.Models.Fordon>

@{
    ViewBag.Title = "Index";
}

<h2>Garage 2.0</h2>
@using (Html.BeginForm())
{
    <p>
        Title: @Html.TextBox("SearchString")
        <input type="submit" value="Filter" />
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RegNr)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Typ)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Färg)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.RegNr)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Typ)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Färg)
        </td>
        <td>
            @Html.ActionLink("Redigera fordon", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Detaljvy för fordon", "Details", new { id = item.Id }) |
            @Html.ActionLink("Hämta ut fordon", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
